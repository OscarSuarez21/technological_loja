<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:weightSum="9">

    <RelativeLayout
        android:id="@+id/reltive"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="2dp">


        <ImageView
            android:id="@+id/istinfo"
            android:layout_marginTop="20dp"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ist"/>
        <TextView
            android:layout_below="@+id/istinfo"
            android:layout_marginTop="10dp"
            android:id="@+id/txtnombre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Instituto Superior"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/txtnombre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtnombre1"
            android:text="Tecnológico Loja"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtnombre2"
            android:layout_marginRight="10dp"
            android:fontFamily="cursive"
            android:text="Define tu Futuro! "
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <ScrollView

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <!-- rector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Administrativos "
               />
            <ImageView
                android:layout_below="@id/txtinfo"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Mgs. Richar Eduardo Ruiz Ordoñez"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Rector"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Magister en Desarrollo de la Inteligencia y Educación Diplomado Superior en Pedagogía Innovadoras Especialista en Diagnóstico Intelectual."/>

            <!-- vicerrector -->
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_below="@id/txtinfo"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vicerector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Mgs. Jhonnatan Patricio Vélez"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Vicerrector"/>
            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="15sp"
                android:text="Ingeniero en Gestión Ambiental Magister en Administración Ambiental"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Desarrollo de Software"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/faviola"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Ing. Fabiola Espinoza"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text=" Cordinadora/Docente"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/palma"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Ing. Mario Palma"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Docente"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fernando"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Ing. Fernando Leon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Docente"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jhon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Ing. Jghon Solano"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_btn"
                android:textStyle="italic"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Docente"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>